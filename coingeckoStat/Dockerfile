FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build-env
WORKDIR /App

ARG RABBITMQ_HOST
ARG RABBITMQ_USER
ARG RABBITMQ_PASS

ARG DATABASE_HOST
ARG DATABASE_USER
ARG DATABASE_PASS
ARG DATABASE_NAME

ENV RABBITMQ_$HOST=RABBITMQ_HOST RABBITMQ_USER=$RABBITMQ_USER RABBITMQ_PASS=$RABBITMQ_PASS
ENV DATABASE_HOST=$DATABASE_HOST DATABASE_USER=$DATABASE_USER DATABASE_PASS=$DATABASE_PASS DATABASE_NAME=$DATABASE_NAME

COPY . ./
RUN dotnet restore
RUN dotnet publish -c Release -o out

FROM mcr.microsoft.com/dotnet/aspnet:8.0
WORKDIR /App
COPY --from=build-env /App/out .
ENTRYPOINT ["dotnet", "CoingeckoStat.dll"]
